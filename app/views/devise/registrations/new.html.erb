<style>
body {
background: url('http://res.cloudinary.com/djxmmaqyo/image/upload/v1505981648/bigschoolpic_gynsys.jpg') no-repeat;
background-size: cover;
}
</style>

<div class="row">
  <div class="col-md-6 col-md-offset-3 text-center">
    <div class="panel panel-success">
      <div class="panel-heading">
        <h2>Sign up</h2>
      </div>

        <div class="panel-body">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

        <div class="form-group">
          <%= f.email_field :email, class: 'form-control', placeholder: 'Email' %>
        </div>

        <div class="form-group">
          <%= "<em>(#{@minimum_password_length} characters minimum)</em>" if @validatable %>
          <%= f.password_field :password, class: 'form-control', placeholder: 'Password',  autocomplete: "off" %>
        </div>
      </div>
    </div>

      <div class="actions">
        <%= f.submit "Sign up", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>
